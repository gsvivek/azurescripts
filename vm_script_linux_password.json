{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
			"type": "string"
		},
		"adminUsername": {
			"type": "secureString"
		},
		"adminPassword": {
			"type": "secureString"
		},
		"sshPublicKey": {
			"type": "secureString"
		},
		"vmSize": {
			"type": "string"
		},
		"nicName": {
			"type": "string"
		},
		"vhdStorageAccountName": {
			"type": "string"
		},
		"cloudUsername": {
			"type": "string"
		},
		"cloudEmail": {
			"type": "string"
		},
		"cloudPassword": {
			"type": "secureString"
		},
		"firstName": {
			"type": "string"
		},
		"lastName": {
			"type": "string"
		},
		"title": {
			"type": "string"
		},
		"orgName": {
			"type": "string"
		},
		"phone": {
			"type": "string"
		},
		"country": {
			"type": "string"
		},
		"state": {
			"type": "string"
		},
		"connectorUUIDList": {
			"type": "string"
		},
		"scriptsUri" : {
			"type": "string"
		}
    },
    "variables": {},
    "resources": [
    {
		"apiVersion": "2016-03-30",
		"type": "Microsoft.Compute/virtualMachines",
		"name": "[parameters('vmName')]",
		"location": "[resourceGroup().location]",
		"properties": {
			"hardwareProfile" : {
				"vmSize" : "[parameters('vmSize')]"
			},
			"osProfile" : {
				"computerName" : "[parameters('vmName')]",
				"adminUsername" : "[parameters('adminUsername')]",
				"adminPassword" : "[parameters('adminPassword')]"
			},
			"storageProfile" : {
				"imageReference": {
					"publisher": "informatica",
					"offer": "ics-payg-ubuntu-preview",
					"sku": "ICS-PAYG-UBUNTU",
					"version": "latest"
				},
				"osDisk": {
					"name": "[concat(parameters('vmName'),'-osDisk')]",
					"osType": "linux",
					"caching": "ReadWrite",
					"createOption": "FromImage",
					"vhd": {
					  "uri": "[concat('https://',parameters('vhdStorageAccountName'),'.blob.core.windows.net/vhds/', parameters('vmName'), uniquestring(resourceGroup().id), 'osDisk.vhd')]"
					}
				}
			},
			"networkProfile" : {
				"networkInterfaces" : [{
						"id" : "[resourceId('Microsoft.Network/networkInterfaces',parameters('nicName'))]"
					}
				]
			}
		}
    }, {
		"type": "Microsoft.Compute/virtualMachines/extensions",
		"name": "[concat(parameters('vmName'), '/CustomScriptExtension')]",
		"apiVersion": "2016-03-30",
		"location": "[resourceGroup().location]",
		"dependsOn" : [
			"[concat('Microsoft.Compute/virtualMachines/', parameters('vmName'))]"
		],
		"properties": {
			"publisher": "Microsoft.Azure.Extensions",
			"type": "CustomScript",
			"typeHandlerVersion": "2.0",
			"autoUpgradeMinorVersion": true,
			"settings": {
				"fileUris" : ["[concat(parameters('scriptsUri'), 'InfaCloudExtProvision.sh')]"]
			},
			"protectedSettings": {
				"commandToExecute" : "[concat('bash InfaCloudExtProvision.sh \"', parameters('cloudUsername'),'\" \"',parameters('cloudEmail'),'\" \"',parameters('cloudPassword'),'\" \"',parameters('firstName'), '\" \"',parameters('lastName'), '\" \"',parameters('title'),'\" \"',parameters('orgName'),'\" \"',parameters('phone'),'\" \"',parameters('country'),'\" \"',parameters('state'),'\" \"',parameters('connectorUUIDList'),'\"')]"
			}
		}
    }
    ]
}